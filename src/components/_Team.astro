<script is:inline>
document.addEventListener('DOMContentLoaded', function() {
  const descriptions = document.querySelectorAll('.profile-description');
  
  descriptions.forEach(desc => {
    const fullText = desc.textContent.trim();
    const words = fullText.split(/\s+/);
    
    if (words.length > 20) {
      // Structure the content
      desc.innerHTML = `
        <span class="preview-text">${words.slice(0, 20).join(' ')}</span>
        <span class="read-more-dots">...</span>
        <span class="read-more-content" style="display: none;"> ${words.slice(20).join(' ')}</span>
        <span class="read-more-btn bg-black text-white px-3 block w-14 h-5 rounded-3xl mt-4 text-center">More</span>
      `;
      
      const dots = desc.querySelector('.read-more-dots');
      const hiddenContent = desc.querySelector('.read-more-content');
      const btn = desc.querySelector('.read-more-btn');
      
      btn.addEventListener('click', function() {
        if (hiddenContent.style.display === 'inline') {
          hiddenContent.style.display = 'none';
          dots.style.display = 'inline';
          btn.textContent = 'More';
        } else {
          hiddenContent.style.display = 'inline';
          dots.style.display = 'none';
          btn.textContent = 'Less';
        }
      });
    }
  });
});
</script>