---
import '@fontsource-variable/libre-franklin';
import '@fontsource-variable/manrope';

import { ClientRouter } from "astro:transitions";

import "../styles/global.css";

import Header from '../components/Header.jsx';
import Footer from '../components/Footer.astro';
import BadgeButtons from '../components/BadgeButtons.astro';

const { 
	title = "Leo's Roofing & Remodeling",
	seoTitle = `${title} | Professional Roofing Services`,
	seoUrl = "https://leosroofingremodeling.com/"
} = Astro.props;

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{seoTitle}</title>
		<ClientRouter />
		<meta name="description" content={Astro.props.description} />

		<!-- Open Graph / Facebook (Social Sharing) -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={Astro.props.description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={seoUrl} />
		<meta property="og:image" content="/social-image.jpg" />


	</head>
	<body class="bg-background font-franklin overflow-x-hidden">
		<Header client:only />
		<BadgeButtons class="hidden md:block" />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
