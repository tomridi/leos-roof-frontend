---
import { PHONE_NUMBER } from '../utils/constants';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---
<div class={`
    fixed top-4 right-4 z-50 flex flex-col space-y-3
    md:top-150 md:right-0
    ${className || ''} `} >
        <a class="
            bg-badge hover:bg-white text-white hover:text-badge font-light
            py-3 px-6 shadow-lg
            flex items-center justify-left
            transition duration-300 ease-in-out
            text-lg md:text-2xl
            cursor-pointer
            min-w-[225px]" 
            href="/contact"
        >
            Free Estimate  <span class="ml-2">&gt;</span>
        </a>

        <a class="
            bg-black hover:bg-white text-white hover:text-black font-light
            py-3 px-6 shadow-lg
            flex items-center justify-left
            transition duration-300 ease-in-out
            text-lg md:text-2xl
            cursor-pointer
            min-w-[225px]"
            href={`tel:${PHONE_NUMBER}`}
        >
            Call Now <span class="ml-2">&gt;</span>
        </a>
    </div>